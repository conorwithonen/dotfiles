// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "redact_private_values": false,
  "title_bar": {
    "show_branch_icon": true
  },
  "outline_panel": {
    "button": true
  },
  "context_servers": {
    "terraform-context-server": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    }
  },
  "language_models": {
    "copilot_chat": {
      "api_url": "https://api.githubcopilot.com/chat/completions",
      "auth_url": "https://api.github.com/copilot_internal/v2/token",
      "models_url": "https://api.githubcopilot.com/models"
    }
  },
  "auto_update_extensions": {
    "kanagawa-themes": false
  },
  "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "collaboration_panel": {
    "dock": "right",
    "button": false
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    },
    "default_profile": "ask",
    "dock": "right",
    "button": true
  },
  "git": {
    "inline_blame": {
      "show_commit_summary": false,
      "delay_ms": 0,
      "enabled": true
    }
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 17,
  "buffer_font_size": 17,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Kanagawa"
  },
  "format_on_save": "off",
  "languages": {
    "Python": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Terraform": {
      "format_on_save": "off"
    }
  },
 	"cursor_blink": false,
	"relative_line_numbers": "enabled",
	"scrollbar": {
		"show": "never"
	},
	"vertical_scroll_margin": 0,
	"tab_bar": {
		"show": true
	},
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false
	},
	"current_line_highlight": "none",
  "gutter": {
    "line_numbers": true,
    "runnables": false,
    "breakpoints": false,
    "folds": true
				},
  "auto_install_extensions": {
    "kanagawa-themes": true,
    "colored-zed-icons-theme": true,
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "lua": true,
    "terraform": true,
    "basher": true,
    "git-firefly": true,
    "liquid": true,
    "nginx": true,
    "nix": true,
    "puppet": true,
    "ruby": true,
    "toml": true
  }
}
